<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Review</th>
            <th>Rating</th>
           
        </tr>
   </thead>
         


        
<% @user.reviews.each do |review| %>

<tbody>
        <tr>
            <td><%= review.author %></td>
            <td><%= review.content %></td>
            <td><% review.rating.to_i.times do %>
            <%= image_tag "star-green.png", :size => "20x20" %>
     
            <% end %></td>
            
        </tr>
</tbody>

<% end %>

</table>



<%= form_for([@user, @user.reviews.build]) do |f| %>
  

  <div class="field input-large">
    <%= f.label :Name %><br>
    <%= f.text_field :author %>
  </div>
  <div class="field input-xlarge">
    <%= f.label :content %><br>
    <%= f.text_area :content%>
  </div>
  <div class="field input-mini">
    <%= f.label :rating %><br>
    <%= f.select( :rating, options_for_select(1..10)) %>
  </div>
  
  <div >
    <%= f.submit "Post Review", class: "btn .btn-small btn-primary"  %>
  </div>
<% end %>







